{{ form_start(form) }}
{{ form_errors(form) }}

<div class="row">
    <div class="col-md-12">{{ form_row(form.title) }}</div>
</div>
<div class="row">
    <div class="col-md-12">{{ form_row(form.content) }}</div>
</div>
<div class="row">
    <div class="col-md-4">{{ form_row(form.category) }}</div>
    <div class="col-md-4">{{ form_row(form.imageUpload) }}</div>
</div>

<div class="row" id="js-trick-add-media">
    <div class="col-md-4" id="js-trick-images">
        {{ form_row(form.mediaImages) }}
    </div>
    {#<div style="display: none" id="js-tricks-images-names">
        {% for mediaImage in trick.mediaImages %}
            <div class="col-2" id="{{ mediaImage.id }}"> <span>{{ mediaImage.name }}</span></div>
        {% endfor %}
    </div>#}
    <div class="col-md-4" id="js-trick-videos">{{ form_row(form.mediaVideos) }}</div>
    <div class="col-md-4">
        <p class="help-video">Pour ajouter une vidéo :</p>
        <ol class="help-video">
            <li>Sélectionnez votre vidéo sur l'hébergeur de votre choix.</li>
            <li>Cliquez sur le lien <strong>Partager</strong></li>
            <li>Sélectionnez <strong>Intégrer</strong>.</li>
            <li>Copiez le lien de la vidéo et collez-le dans le champ.</li>
        </ol>
    </div>
    <div>
        {% if trick.mediaImages %}
        <div class="col-md-4 mb-3">
            {% for mediaImage in trick.mediaImages %}
                <div>
                    <a href="{{ path('image.delete', {id: trick.id, imageId: mediaImage.id}) }}" id="removeButton" class="btn btn-danger">
                        <i class="fas fa-times"></i>
                        <img id="js-media-image" class="d-block w-100 img-responsive" src="{{ asset('uploads/media/') ~ mediaImage.name }}"
                             alt="image media">
                    </a>
                </div>
            {% endfor %}
        </div>
        {% endif %}
    </div>

</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="{{ asset('js/app.js') }}"></script>
{{ form_rest(form) }}
<button class="btn btn-primary">{{ button|default('Enregistrer') }}</button>
{{ form_end(form) }}

