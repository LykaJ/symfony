{% extends 'base.html.twig' %}
{% block title 'Home' %}

{% block body %}
    <div class="jumbotron text-center">
        <div class="container">
            <h1>SnowTricks</h1>
        </div>
    </div>
    <div class="container">
        <h2>Les derniers tricks</h2>
        {% if app.user %}
            <div class="mb-4">
                <a href="{{ path('admin.tricks.new') }}" class="btn btn-primary">Ajouter un trick</a>
            </div>
        {% endif %}
        <div class="row">
            {% for trick in tricks %}
                {% include ('tricks/_list.html.twig') %}
            {% endfor %}
        </div>
    </div>
{% endblock %}